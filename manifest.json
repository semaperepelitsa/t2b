{
  "manifest_version": 2,
  "name": "T2B",
  "version": "1.0.1",

  "permissions": [
    "http://*.dotabuff.com/",
    "http://dota2toplist.com/"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*.dotabuff.com/topics/*",
        "http://*.dotabuff.com/blog/*"
      ],
      "css": ["src/injected.css"],
      "js": ["src/safrome.js", "src/injected.js"]
    }
  ],

  "background": {
    "page": "src/global.html",
    "persistent": false
  }
}